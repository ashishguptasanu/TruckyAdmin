<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:id="@+id/cardview_task">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01-09-2017 8 to 10 AM"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/tv_date_time"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup From: B-25/ Sector-32, Gurgaon."
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:id="@+id/tv_pickup"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drop off: S-111, Uppal Southend, Sector-48, Gurgaon."
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:id="@+id/tv_dropoff"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Assigned"
                android:textSize="15sp"
                android:gravity="end"
                android:id="@+id/tv_status"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textColor="#ff9800"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>